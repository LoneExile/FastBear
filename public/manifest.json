{
  "name": "FastBear",
  "description": "for more productive test",
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_origin_as_fallback": true,
      "js": ["contentscript.js"]
    }
  ],
  "icons": {
    "16": "./images/polar-bear-128.png",
    "48": "./images/polar-bear-128.png",
    "128": "./images/polar-bear-128.png"
  },
  "permissions": ["storage", "tabs"]
}
